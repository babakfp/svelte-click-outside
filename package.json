{
    "name": "svelte-outclick",
    "version": "3.7.1",
    "description": "A Svelte component that allows you to listen to the clicks that happen outside of an element.",
    "license": "MIT",
    "repository": "github:babakfp/svelte-outclick",
    "homepage": "https://babakfp.ir/docs/svelte-outclick",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && pnpm run package",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "package": "svelte-kit sync && svelte-package -i src/package && publint",
        "prepublishOnly": "pnpm run package",
        "format": "prettier -w .",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "peerDependencies": {
        "svelte": ">= 4.2.12"
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "5.4.1",
        "@sveltejs/kit": "2.5.18",
        "@sveltejs/package": "2.3.2",
        "@sveltejs/vite-plugin-svelte": "3.1.1",
        "autoprefixer": "10.4.19",
        "postcss": "8.4.39",
        "prettier": "3.3.3",
        "prettier-plugin-svelte": "3.2.6",
        "prettier-plugin-tailwindcss": "0.6.5",
        "publint": "0.2.9",
        "svelte": "4.2.18",
        "svelte-check": "3.8.4",
        "svelte-loading-bar": "1.2.0",
        "tailwindcss": "3.4.6",
        "tslib": "2.6.3",
        "typescript": "5.5.3",
        "vite": "5.3.4"
    },
    "exports": {
        ".": {
            "types": "./dist/OutClick.svelte.d.ts",
            "svelte": "./dist/OutClick.svelte"
        }
    },
    "files": [
        "dist"
    ],
    "types": "./dist/OutClick.svelte.d.ts",
    "svelte": "./dist/OutClick.svelte",
    "keywords": [
        "svelte",
        "outclick",
        "outside",
        "click"
    ],
    "type": "module"
}
