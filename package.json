{
    "name": "svelte-outclick",
    "description": "A Svelte component that allows you to listen to the clicks that happen outside of an element.",
    "version": "3.5.0",
    "license": "MIT",
    "repository": "github:babakfp/svelte-outclick",
    "homepage": "https://babakfp.ir/docs/svelte-outclick",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "lint": "prettier --plugin-search-dir . --check .",
        "format": "prettier --plugin-search-dir . --write .",
        "package": "svelte-kit sync && svelte-package -i src/package -o package-dist && publint",
        "prepublishOnly": "npm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "exports": {
        ".": {
            "types": "./package-dist/OutClick.svelte.d.ts",
            "svelte": "./package-dist/OutClick.svelte"
        }
    },
    "files": [
        "package-dist"
    ],
    "peerDependencies": {
        "svelte": "3.x"
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "3.0.0",
        "@sveltejs/kit": "1.18.0",
        "@sveltejs/package": "2.0.2",
        "autoprefixer": "10.4.14",
        "cssnano": "6.0.1",
        "postcss": "8.4.23",
        "postcss-load-config": "4.0.1",
        "prettier": "2.8.8",
        "prettier-plugin-svelte": "2.10.0",
        "prettier-plugin-tailwindcss": "0.3.0",
        "publint": "0.1.12",
        "svelte": "3.59.1",
        "svelte-check": "3.3.2",
        "svelte-loading-bar": "0.0.4",
        "tailwindcss": "3.3.2",
        "tslib": "2.5.2",
        "typescript": "5.0.4",
        "vite": "4.3.8"
    },
    "types": "./package-dist/OutClick.svelte.d.ts",
    "svelte": "./package-dist/OutClick.svelte",
    "type": "module"
}
