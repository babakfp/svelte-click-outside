{
    "name": "svelte-outclick",
    "description": "A Svelte component that allows you to listen to the clicks that happen outside of an element.",
    "version": "3.6.1",
    "license": "MIT",
    "repository": "github:babakfp/svelte-outclick",
    "homepage": "https://babakfp.ir/docs/svelte-outclick",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "lint": "prettier --check .",
        "format": "prettier --write .",
        "package": "svelte-kit sync && svelte-package -i src/package && publint",
        "prepublishOnly": "npm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "exports": {
        ".": {
            "types": "./dist/OutClick.svelte.d.ts",
            "svelte": "./dist/OutClick.svelte"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "svelte": "3.x"
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "3.0.3",
        "@sveltejs/kit": "1.22.5",
        "@sveltejs/package": "2.2.1",
        "autoprefixer": "10.4.14",
        "cssnano": "6.0.1",
        "postcss": "8.4.27",
        "postcss-load-config": "4.0.1",
        "prettier": "3.0.1",
        "prettier-plugin-svelte": "3.0.3",
        "prettier-plugin-tailwindcss": "0.5.2",
        "publint": "0.2.0",
        "svelte": "4.2.0",
        "svelte-check": "3.5.0",
        "svelte-loading-bar": "0.0.5",
        "tailwindcss": "3.3.3",
        "tslib": "2.6.1",
        "typescript": "5.1.6",
        "vite": "4.4.9"
    },
    "types": "./dist/OutClick.svelte.d.ts",
    "svelte": "./dist/OutClick.svelte",
    "type": "module"
}
