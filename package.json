{
    "name": "svelte-outclick",
    "version": "3.7.0",
    "description": "A Svelte component that allows you to listen to the clicks that happen outside of an element.",
    "license": "MIT",
    "repository": "github:babakfp/svelte-outclick",
    "homepage": "https://babakfp.ir/docs/svelte-outclick",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && pnpm run package",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "package": "svelte-kit sync && svelte-package -i src/package && publint",
        "prepublishOnly": "pnpm run package",
        "format": "prettier -w .",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "exports": {
        ".": {
            "types": "./dist/OutClick.svelte.d.ts",
            "svelte": "./dist/OutClick.svelte"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "@sveltejs/kit": "1.x || 2.x",
        "svelte": "3.x || 4.x"
    },
    "peerDependenciesMeta": {
        "@sveltejs/kit": {
            "optional": true
        }
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "4.0.4",
        "@sveltejs/kit": "2.3.2",
        "@sveltejs/package": "2.2.5",
        "@sveltejs/vite-plugin-svelte": "3.0.1",
        "autoprefixer": "10.4.16",
        "postcss": "8.4.33",
        "postcss-load-config": "5.0.2",
        "prettier": "3.2.0",
        "prettier-plugin-svelte": "3.1.2",
        "prettier-plugin-tailwindcss": "0.5.11",
        "publint": "0.2.7",
        "svelte": "4.2.8",
        "svelte-check": "3.6.3",
        "svelte-loading-bar": "1.0.1",
        "tailwindcss": "3.4.1",
        "tslib": "2.6.2",
        "typescript": "5.3.3",
        "vite": "5.0.11"
    },
    "types": "./dist/OutClick.svelte.d.ts",
    "svelte": "./dist/OutClick.svelte",
    "type": "module"
}
