{
    "name": "svelte-outclick",
    "version": "3.7.0",
    "description": "A Svelte component that allows you to listen to the clicks that happen outside of an element.",
    "license": "MIT",
    "repository": "github:babakfp/svelte-outclick",
    "homepage": "https://babakfp.ir/docs/svelte-outclick",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && pnpm run package",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "package": "svelte-kit sync && svelte-package -i src/package && publint",
        "prepublishOnly": "pnpm run package",
        "format": "prettier -w .",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "exports": {
        ".": {
            "types": "./dist/OutClick.svelte.d.ts",
            "svelte": "./dist/OutClick.svelte"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "svelte": ">= 4.2.12"
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "5.2.0",
        "@sveltejs/kit": "2.5.4",
        "@sveltejs/package": "2.3.0",
        "@sveltejs/vite-plugin-svelte": "3.0.2",
        "autoprefixer": "10.4.19",
        "postcss": "8.4.38",
        "postcss-load-config": "5.0.3",
        "prettier": "3.2.5",
        "prettier-plugin-svelte": "3.2.2",
        "prettier-plugin-tailwindcss": "0.5.12",
        "publint": "0.2.7",
        "svelte": "4.2.12",
        "svelte-check": "3.6.8",
        "svelte-loading-bar": "1.2.0",
        "tailwindcss": "3.4.1",
        "tslib": "2.6.2",
        "typescript": "5.4.3",
        "vite": "5.2.3"
    },
    "types": "./dist/OutClick.svelte.d.ts",
    "svelte": "./dist/OutClick.svelte",
    "type": "module"
}
