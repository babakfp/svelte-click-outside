{
    "name": "svelte-outclick",
    "version": "4.1.1",
    "description": "A Svelte component that allows you to listen to the clicks that happen outside of an element.",
    "license": "MIT",
    "repository": "github:babakfp/svelte-outclick",
    "homepage": "https://babakfp.ir/docs/svelte-outclick",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && pnpm package",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "package": "svelte-kit sync && svelte-package -i src/package && publint",
        "prepublishOnly": "pnpm package",
        "format": "prettier -w .",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "peerDependencies": {
        "svelte": ">= 5"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.3.1",
        "@sveltejs/adapter-vercel": "5.4.5",
        "@sveltejs/kit": "2.7.2",
        "@sveltejs/package": "2.3.5",
        "@sveltejs/vite-plugin-svelte": "4.0.0",
        "autoprefixer": "10.4.20",
        "postcss": "8.4.47",
        "prettier": "3.3.3",
        "prettier-plugin-svelte": "3.2.7",
        "prettier-plugin-tailwindcss": "0.6.8",
        "publint": "0.2.11",
        "svelte": "5.0.5",
        "svelte-check": "4.0.5",
        "svelte-loading-bar": "2.0.2",
        "tailwindcss": "3.4.14",
        "tslib": "2.8.0",
        "typescript": "5.6.3",
        "vite": "5.4.9"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "types": "./dist/index.d.ts",
    "svelte": "./dist/index.js",
    "keywords": [
        "svelte",
        "outclick",
        "outside",
        "click"
    ],
    "type": "module"
}
