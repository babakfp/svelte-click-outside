@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
    * {
        @apply select-none [outline:none];
    }

    svg.icon {
        @apply pointer-events-none inline-block h-[1em] w-[1em] fill-current;
    }
}

@layer components {
    .box {
        @apply relative z-10 flex h-20 items-center justify-center rounded border-2 border-dashed border-gray-700 bg-gray-900 text-center text-xs;
    }
}
